<Window x:Class="PetCare.Views.ChatView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Title}" Height="500" Width="400" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Grid Background="#E5DDD5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Messages List -->
        <ListBox Grid.Row="0" ItemsSource="{Binding Messages}" Background="Transparent" BorderThickness="0" Margin="10">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="IsHitTestVisible" Value="False"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,5">
                         <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Background="{Binding BubbleColor}" CornerRadius="10" Padding="10" HorizontalAlignment="{Binding Alignment}" MaxWidth="280">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="2" ShadowDepth="1" Opacity="0.2"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="{Binding SenderName}" FontSize="10" FontWeight="Bold" Foreground="#075E54" Margin="0,0,0,2" Visibility="{Binding IsMe, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}"/>
                                <TextBlock Text="{Binding Text}" TextWrapping="Wrap" FontSize="14" Foreground="{Binding TextColor}"/>
                                <TextBlock Text="{Binding TimeDisplay}" FontSize="10" Foreground="Gray" HorizontalAlignment="Right" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Input Area -->
        <Grid Grid.Row="1" Background="White" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0" Text="{Binding NewMessageText}" Height="40" VerticalContentAlignment="Center" Padding="5" Margin="0,0,10,0" FontSize="14"/>
            <Button Grid.Column="1" Content="Trimite" Click="Send_Click" Width="70" Background="#075E54" Foreground="White" FontWeight="Bold" BorderThickness="0"/>
        </Grid>
    </Grid>
</Window>
