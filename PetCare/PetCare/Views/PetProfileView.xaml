<Page x:Class="PetCare.Views.PetProfileView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Profil Animal">

    <Grid Background="#F5F7FA" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Content="⬅ Înapoi" HorizontalAlignment="Left" 
                Width="100" Height="35" Margin="0,0,0,15"
                Background="Transparent" Foreground="#546E7A" FontWeight="Bold" 
                BorderBrush="#CFD8DC" BorderThickness="1" Cursor="Hand"
                ToolTip="Înapoi la pagina anterioară">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" CornerRadius="10" Margin="0,0,20,0" Padding="25">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="15" Opacity="0.05"/>
                </Border.Effect>

                <StackPanel>
                    <Grid Width="150" Height="150" Margin="0,0,0,20">
                        <Ellipse Fill="#E3F2FD"/>
                        <TextBlock Text="🐶" FontSize="80" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>

                    <TextBlock Text="Rex" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#2C3E50"/>
                    <TextBlock Text="Golden Retriever" FontSize="16" Foreground="Gray" HorizontalAlignment="Center" Margin="0,5,0,25"/>

                    <Grid Margin="0,0,0,25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="Vârstă" Foreground="Gray" FontSize="12" HorizontalAlignment="Center"/>
                            <TextBlock Text="4 ani" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center" Foreground="#2C3E50"/>
                        </StackPanel>

                        <Rectangle Grid.Column="1" Width="1" Fill="#E0E0E0" Height="40"/>

                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock Text="Greutate" Foreground="Gray" FontSize="12" HorizontalAlignment="Center"/>
                            <TextBlock Text="28 kg" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center" Foreground="#2C3E50"/>
                        </StackPanel>
                    </Grid>

                    <Separator Background="#ECEFF1" Margin="0,0,0,20"/>

                    <TextBlock Text="Proprietar:" Foreground="#90A4AE" FontSize="12"/>
                    <TextBlock Text="Popescu Ion" FontWeight="SemiBold" FontSize="15" Margin="0,2,0,15" Foreground="#37474F"/>

                    <TextBlock Text="Microcip:" Foreground="#90A4AE" FontSize="12"/>
                    <TextBlock Text="642098123456789" FontWeight="SemiBold" FontSize="15" Margin="0,2,0,15" Foreground="#37474F"/>

                    <TextBlock Text="Sex:" Foreground="#90A4AE" FontSize="12"/>
                    <TextBlock Text="Masculin" FontWeight="SemiBold" FontSize="15" Margin="0,2,0,15" Foreground="#37474F"/>

                    <Button Content="✏️ Editează Datele" Margin="0,30,0,0" Height="40" 
                            Background="White" Foreground="#2196F3" BorderBrush="#2196F3" BorderThickness="1"
                            FontWeight="Bold" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="10">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="15" Opacity="0.05"/>
                </Border.Effect>

                <TabControl BorderThickness="0" Background="Transparent">
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Padding" Value="25,12"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Cursor" Value="Hand"/>
                        </Style>
                    </TabControl.Resources>

                    <TabItem Header="📋 Istoric Medical">
                        <Grid Margin="10,20,10,10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <DockPanel Margin="0,0,0,15">
                                <TextBlock Text="Istoric Vaccinuri și Tratamente" FontSize="18" FontWeight="Bold" Foreground="#2C3E50"/>
                                <Button Content="🖨️ Printează Fișa" DockPanel.Dock="Right" Background="Transparent" BorderThickness="0" Foreground="#1976D2" FontWeight="Bold" Cursor="Hand"/>
                            </DockPanel>

                            <DataGrid Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" 
                                      HeadersVisibility="Column" RowHeight="45" BorderThickness="1" BorderBrush="#ECEFF1"
                                      Background="White">
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="#F5F7FA"/>
                                        <Setter Property="Padding" Value="10"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Data" Width="100" Binding="{Binding Data}"/>
                                    <DataGridTextColumn Header="Tip Procedură" Width="180" Binding="{Binding Procedura}" FontWeight="SemiBold"/>
                                    <DataGridTextColumn Header="Medic" Width="150" Binding="{Binding Medic}"/>
                                    <DataGridTextColumn Header="Observații / Tratament" Width="*" Binding="{Binding Observatii}"/>
                                </DataGrid.Columns>

                                <x:Array Type="{x:Type sys:Object}">
                                    <x:Array Type="{x:Type sys:String}"/>
                                    <x:Array Type="{x:Type sys:String}"/>
                                </x:Array>
                            </DataGrid>
                        </Grid>
                    </TabItem>

                    <TabItem Header="📅 Programări Viitoare">
                        <StackPanel Margin="20">
                            <TextBlock Text="Următoarea Vizită" FontSize="18" FontWeight="Bold" Margin="0,0,0,15" Foreground="#2C3E50"/>

                            <Border Background="#E3F2FD" CornerRadius="10" Padding="20" Margin="0,0,0,20" BorderBrush="#90CAF9" BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Background="#1976D2" CornerRadius="8" Width="60" Height="60" VerticalAlignment="Center">
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="14" Foreground="White" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center"/>
                                            <TextBlock Text="IAN" Foreground="White" FontSize="12" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="Control General + Vaccin Anual" FontWeight="Bold" FontSize="18" Foreground="#1565C0"/>
                                        <TextBlock Text="Clinica VetLife • Dr. Ionescu Radu" Foreground="#546E7A" Margin="0,5,0,0" FontSize="14"/>
                                        <TextBlock Text="Ora 14:30" Foreground="#546E7A" FontWeight="Bold" Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                        <Button Content="Modifică" Background="White" Foreground="#1976D2" BorderThickness="0" Margin="0,0,0,5" Width="100" Height="30">
                                            <Button.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="5"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>
                                        <Button Content="Anulează" Background="Transparent" Foreground="#D32F2F" BorderThickness="0" Width="100" Height="30"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <Button Content="+ Programează o nouă vizită" HorizontalAlignment="Left" Background="#4CAF50" Foreground="White" 
                                    Height="40" Padding="20,0" FontWeight="Bold" BorderThickness="0">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </StackPanel>
                    </TabItem>

                    <TabItem Header="🍖 Dietă și Note">
                        <Grid Margin="20">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel>
                                    <TextBlock Text="Preferințe Alimentare &amp; Alergii" FontWeight="Bold" Margin="0,0,0,5" Foreground="#2C3E50"/>
                                    <TextBox Height="80" Text="Mănâncă doar hrană uscată Royal Canin (Sortimentul Digestive Care). Este alergic la carnea de pui (se irită pe piele)." 
                                             TextWrapping="Wrap" Padding="10" Background="#FAFAFA" BorderBrush="#CFD8DC"/>

                                    <TextBlock Text="Comportament" FontWeight="Bold" Margin="0,20,0,5" Foreground="#2C3E50"/>
                                    <TextBox Height="80" Text="Este un câine foarte prietenos cu oamenii, dar devine anxios în prezența altor câini de talie mare. Se sperie de tunete și artificii." 
                                             TextWrapping="Wrap" Padding="10" Background="#FAFAFA" BorderBrush="#CFD8DC"/>

                                    <TextBlock Text="Note Administrative (Doar Medic)" FontWeight="Bold" Margin="0,20,0,5" Foreground="#C62828"/>
                                    <TextBox Height="60" Text="Proprietarul solicită mereu factură pe firmă. A întârziat la ultimele 2 vizite." 
                                             TextWrapping="Wrap" Padding="10" Background="#FFEBEE" BorderBrush="#EF9A9A"/>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </TabItem>

                </TabControl>
            </Border>
        </Grid>
    </Grid>
</Page>