<Page x:Class="PetCare.Views.BookAppointmentView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="900"
      Title="Programare NouÄƒ"
      FontFamily="Segoe UI">

    <Page.Resources>
        <SolidColorBrush x:Key="PrimaryBlue" Color="#1976D2"/>
        <SolidColorBrush x:Key="PrimaryGreen" Color="#4CAF50"/>
        <SolidColorBrush x:Key="TextDark" Color="#333333"/>
        <SolidColorBrush x:Key="TextLight" Color="#666666"/>

        <Style x:Key="StepCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Margin" Value="0,0,0,25"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.1" Color="Black" Direction="270"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="StepHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/bookappointment_background.jpg" Stretch="UniformToFill" Opacity="1"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Padding="30,25">
            <Border.Background>
                <SolidColorBrush Color="#CCFFFFFF"/>
            </Border.Background>

            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.1" Color="Black"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Programare NouÄƒ" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource PrimaryBlue}"/>

                <TextBlock Text="CompleteazÄƒ paÈ™ii de mai jos pentru a stabili o vizitÄƒ." 
                           FontSize="16" 
                           Foreground="#666666" 
                           Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,30,0,30">
            <StackPanel Margin="40,0" MaxWidth="800" HorizontalAlignment="Center">

                <Border Style="{StaticResource StepCardStyle}">
                    <StackPanel>
                        <TextBlock Text="1. SelecteazÄƒ Animalul" Style="{StaticResource StepHeaderTextStyle}"/>
                        <ComboBox ItemsSource="{Binding MyAnimals}" 
                                  SelectedItem="{Binding SelectedAnimal}"
                                  DisplayMemberPath="Nume"/>
                        <TextBlock Text="{Binding SelectedAnimal.SpecieNume}" Foreground="{StaticResource TextLight}" Margin="2,8,0,0" FontSize="13" FontStyle="Italic"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource StepCardStyle}" IsEnabled="{Binding IsStep2Enabled}">
                    <StackPanel>
                        <TextBlock Text="2. SelecteazÄƒ Clinica" Style="{StaticResource StepHeaderTextStyle}"/>
                        <ComboBox ItemsSource="{Binding AllClinics}" 
                                  SelectedItem="{Binding SelectedClinic}"
                                  DisplayMemberPath="Nume"/>
                        <StackPanel Orientation="Horizontal" Margin="2,8,0,0">
                            <TextBlock Text="ðŸ“" Foreground="{StaticResource TextLight}" Margin="0,0,5,0" FontSize="11"/>
                            <TextBlock Text="{Binding SelectedClinic.Adresa}" Foreground="{StaticResource TextLight}" FontSize="13"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource StepCardStyle}" IsEnabled="{Binding IsStep3Enabled}">
                    <StackPanel>
                        <TextBlock Text="3. SelecteazÄƒ Serviciile" Style="{StaticResource StepHeaderTextStyle}"/>
                        <TextBlock Text="PoÈ›i selecta unul sau mai multe servicii:" Foreground="{StaticResource TextLight}" Margin="0,0,0,15" FontSize="14"/>

                        <ListBox ItemsSource="{Binding ClinicServices}" 
                                 SelectionMode="Multiple"
                                 MaxHeight="250"
                                 BorderBrush="#EEE"
                                 BorderThickness="1"
                                 Padding="5"
                                 SelectionChanged="ServicesListBox_SelectionChanged">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Margin" Value="0,2"/>
                                    <Setter Property="Padding" Value="5"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border x:Name="ItemBorder" Background="Transparent" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter />
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="ItemBorder" Property="Background" Value="#E3F2FD"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="ItemBorder" Property="Background" Value="#F5F5F5"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding Denumire}" FontWeight="SemiBold" FontSize="15" VerticalAlignment="Center"/>
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                                            <TextBlock Text="â±ï¸" FontSize="12" Margin="0,1,4,0" Opacity="0.7"/>
                                            <TextBlock Text="{Binding DurataEstimataMinute}" Foreground="{StaticResource TextLight}"/>
                                            <TextBlock Text=" min" Foreground="{StaticResource TextLight}"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" Text="{Binding PretStandard, StringFormat={}{0:F2} RON}" 
                                                   Foreground="{StaticResource PrimaryGreen}" FontWeight="Bold" FontSize="15" VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <Border Background="#E8F5E9" CornerRadius="8" Padding="15" Margin="0,20,0,0" HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="DuratÄƒ totalÄƒ estimatÄƒ: " FontWeight="Normal" Foreground="{StaticResource TextDark}" FontSize="14"/>
                                <TextBlock Text="{Binding TotalDurationDisplay}" FontWeight="Bold" Foreground="{StaticResource PrimaryGreen}" FontSize="15" Margin="5,0,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource StepCardStyle}" IsEnabled="{Binding IsStep4Enabled}">
                    <StackPanel>
                        <TextBlock Text="4. SelecteazÄƒ Medicul" Style="{StaticResource StepHeaderTextStyle}"/>
                        <ComboBox ItemsSource="{Binding AvailableMedics}" 
                                  SelectedItem="{Binding SelectedMedic}"
                                  Height="50">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="5">
                                        <TextBlock FontSize="15">
                                            <Run Text="Dr. " FontWeight="SemiBold" Foreground="{StaticResource PrimaryBlue}"/>
                                            <Run Text="{Binding Nume}" FontWeight="SemiBold"/>
                                            <Run Text=" "/>
                                            <Run Text="{Binding Prenume}" FontWeight="SemiBold"/>
                                        </TextBlock>
                                        <TextBlock Text="{Binding NrParafa, StringFormat='ParafÄƒ: {0}'}" FontSize="12" Foreground="{StaticResource TextLight}" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </Border>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource StepCardStyle}" IsEnabled="{Binding IsStep5Enabled}">
                        <StackPanel>
                            <TextBlock Text="5. Data" Style="{StaticResource StepHeaderTextStyle}"/>
                            <ListBox ItemsSource="{Binding AvailableDates}" 
                                     SelectedItem="{Binding SelectedDate}"
                                     MaxHeight="200"
                                     BorderBrush="#EEE" BorderThickness="1" Padding="5">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Padding" Value="10,8"/>
                                        <Setter Property="Margin" Value="0,2"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <Border x:Name="DateBorder" Background="Transparent" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="DateBorder" Property="Background" Value="{StaticResource PrimaryBlue}"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </Trigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="DateBorder" Property="Background" Value="#E3F2FD"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding StringFormat='dd MMMM yyyy (dddd)'}" FontSize="14"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Style="{StaticResource StepCardStyle}" IsEnabled="{Binding IsStep6Enabled}">
                        <StackPanel>
                            <TextBlock Text="6. Ora" Style="{StaticResource StepHeaderTextStyle}"/>
                            <ListBox ItemsSource="{Binding AvailableTimeSlots}" 
                                     SelectedItem="{Binding SelectedTimeSlot}"
                                     MaxHeight="200"
                                     BorderBrush="#EEE" BorderThickness="1" Padding="5"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>

                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Margin" Value="4"/>
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <Border x:Name="TimeBorder" Background="White" BorderBrush="#DDD" BorderThickness="1" CornerRadius="6" Width="80" Height="40">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="TimeBorder" Property="Background" Value="{StaticResource PrimaryGreen}"/>
                                                            <Setter TargetName="TimeBorder" Property="BorderBrush" Value="{StaticResource PrimaryGreen}"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                            <Setter Property="FontWeight" Value="Bold"/>
                                                        </Trigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="TimeBorder" Property="Background" Value="#E8F5E9"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding DisplayText}" FontSize="14"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>
                </Grid>

            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="2" Background="White" Padding="30,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="-2" Opacity="0.1" Direction="90"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="AnuleazÄƒ" Click="CancelButton_Click" 
                        Width="130" Height="45" Margin="0,0,15,0"
                        Background="White" Foreground="{StaticResource TextLight}" 
                        BorderThickness="1" BorderBrush="#DDD" FontSize="15">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="ConfirmÄƒ Programarea" Click="ConfirmButton_Click" 
                        Width="200" Height="45"
                        Background="{StaticResource PrimaryGreen}" Foreground="White" 
                        FontWeight="Bold" FontSize="15" BorderThickness="0"
                        IsEnabled="{Binding CanConfirmBooking}">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Page>