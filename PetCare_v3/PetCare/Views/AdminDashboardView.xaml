<Page x:Class="PetCare.Views.AdminDashboardView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:PetCare.Views"
      mc:Ignorable="d"
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="Panou Administrator - Gestionare ClinicÄƒ"
      FontFamily="Segoe UI">

    <Page.Resources>
        <SolidColorBrush x:Key="PrimaryBlue" Color="#1976D2"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#43A047"/>
        <SolidColorBrush x:Key="AccentRed" Color="#E53935"/>
        <SolidColorBrush x:Key="AccentOrange" Color="#FB8C00"/>
        <SolidColorBrush x:Key="LightBackground" Color="#F5F7FA"/>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="5" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="5" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#EEE"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFAFA"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F5F7FA"/>
            <Setter Property="Foreground" Value="#546E7A"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,12"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Padding="{TemplateBinding Padding}" Background="Transparent">
                            <ContentPresenter VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" Padding="20,12" Background="Transparent" Margin="0,0,5,0" CornerRadius="5,5,0,0">
                            <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="{StaticResource PrimaryBlue}"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#546E7A"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource PrimaryBlue}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/admin_background.jpg" Stretch="UniformToFill" Opacity="1.0"/>
        </Grid.Background>
        <Rectangle Fill="#F0F2F5" Opacity="0"/>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ›¡ï¸ Panou Administrator" FontSize="24" FontWeight="Bold" Foreground="#37474F"/>
                    <Border Background="{StaticResource PrimaryBlue}" CornerRadius="4" Margin="15,0,0,0" Padding="8,2">
                        <TextBlock Text="MANAGEMENT MODE" Foreground="White" FontSize="10" FontWeight="Bold" VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>

                <Button Content="Deconectare" Click="LogoutButton_Click" HorizontalAlignment="Right"
                        Style="{StaticResource ModernButtonStyle}" Background="White" Foreground="{StaticResource AccentRed}" BorderBrush="{StaticResource AccentRed}" BorderThickness="1"/>
            </Grid>

            <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0">

                <TabItem Header="Detalii ClinicÄƒ">
                    <Border Background="White" CornerRadius="0,5,5,5" Padding="30">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Color="#000"/>
                        </Border.Effect>

                        <StackPanel MaxWidth="600" HorizontalAlignment="Left">
                            <TextBlock Text="InformaÈ›ii Generale" FontSize="20" FontWeight="Bold" Foreground="{StaticResource PrimaryBlue}" Margin="0,0,0,20"/>
                            <Rectangle Height="1" Fill="#EEE" Margin="0,0,0,20"/>

                            <TextBlock Text="Nume ClinicÄƒ" FontSize="14" Foreground="#546E7A" Margin="0,0,0,6"/>
                            <TextBox Text="{Binding ClinicName}" Style="{StaticResource ModernTextBox}" Margin="0,0,0,15"/>

                            <TextBlock Text="AdresÄƒ" FontSize="14" Foreground="#546E7A" Margin="0,0,0,6"/>
                            <TextBox Text="{Binding ClinicAddress}" Style="{StaticResource ModernTextBox}" Margin="0,0,0,15"/>

                            <TextBlock Text="Telefon" FontSize="14" Foreground="#546E7A" Margin="0,0,0,6"/>
                            <TextBox Text="{Binding ClinicPhone}" Style="{StaticResource ModernTextBox}" Margin="0,0,0,35"/>

                            <Button Content="ðŸ’¾ SalveazÄƒ ModificÄƒrile" Click="SaveClinic_Click" 
                                    Width="220" Height="45"
                                    HorizontalAlignment="Left"
                                    Background="{StaticResource PrimaryBlue}" 
                                    Foreground="White"
                                    FontSize="15"
                                    FontWeight="Normal" 
                                    Cursor="Hand"
                                    BorderThickness="0">

                                <Button.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.2"/>
                                </Button.Effect>

                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="BtnBorder" Background="{TemplateBinding Background}" CornerRadius="8">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="BtnBorder" Property="Background" Value="#1565C0"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                        </StackPanel>
                    </Border>
                </TabItem>

                <TabItem Header="Gestionare Servicii">
                    <Grid Background="White">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <DataGrid Grid.Row="0" ItemsSource="{Binding Services}" SelectedItem="{Binding SelectedService}" Margin="20">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Denumire Serviciu" Binding="{Binding Denumire}" Width="*"/>

                                <DataGridTextColumn Header="PreÈ› (RON)" Binding="{Binding PretStandard}" Width="150"/>
                                <DataGridTextColumn Header="DuratÄƒ (min)" Binding="{Binding DurataEstimataMinute}" Width="150"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <Border Grid.Row="1" Background="#F9FAFB" BorderBrush="#EEE" BorderThickness="0,1,0,0" Padding="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Orientation="Horizontal">
                                    <StackPanel Margin="0,0,15,0" Width="250">
                                        <TextBlock Text="Denumire" FontSize="12" Foreground="Gray"/>
                                        <TextBox Text="{Binding NewServiceName}" Style="{StaticResource ModernTextBox}"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,15,0" Width="100">
                                        <TextBlock Text="PreÈ›" FontSize="12" Foreground="Gray"/>
                                        <TextBox Text="{Binding NewServicePrice}" Style="{StaticResource ModernTextBox}"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,15,0" Width="100">
                                        <TextBlock Text="DuratÄƒ" FontSize="12" Foreground="Gray"/>
                                        <TextBox Text="{Binding NewServiceDuration}" Style="{StaticResource ModernTextBox}"/>
                                    </StackPanel>
                                    <Button Content="+ AdaugÄƒ" Click="AddService_Click" VerticalAlignment="Bottom" Height="36"
                                            Style="{StaticResource ModernButtonStyle}" Background="{StaticResource AccentGreen}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Bottom">
                                    <Button Content="âœï¸ EditeazÄƒ" Click="UpdateService_Click" Margin="0,0,10,0" Height="36"
                                            Style="{StaticResource ModernButtonStyle}" Background="{StaticResource AccentOrange}"/>
                                    <Button Content="ðŸ—‘ï¸ È˜terge" Click="DeleteService_Click" Height="36"
                                            Style="{StaticResource ModernButtonStyle}" Background="{StaticResource AccentRed}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </TabItem>

                <TabItem Header="Medici AsociaÈ›i">
                    <Grid Background="White" Margin="0">
                        <DataGrid ItemsSource="{Binding Medics}" IsReadOnly="True" Margin="20">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Nume" Binding="{Binding Nume}" Width="*"/>
                                <DataGridTextColumn Header="Prenume" Binding="{Binding Prenume}" Width="*"/>
                                <DataGridTextColumn Header="Nr. ParafÄƒ" Binding="{Binding NrParafa}" Width="150"/>
                                <DataGridTextColumn Header="Telefon" Binding="{Binding Telefon}" Width="150"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>

                <TabItem Header="Stocuri / Inventar">
                    <Grid Background="White">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <DataGrid Grid.Row="0" ItemsSource="{Binding StockList}" SelectedItem="{Binding SelectedStock}" Margin="20">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Produs" Binding="{Binding DenumireProdus}" Width="*"/>
                                <DataGridTextColumn Header="UM" Binding="{Binding UnitateMasura}" Width="100"/>
                                <DataGridTextColumn Header="Cantitate" Binding="{Binding CantitateDisponibila}" Width="120" FontWeight="Bold"/>
                                <DataGridTextColumn Header="PreÈ› Unitar" Binding="{Binding PretUnitar}" Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <Border Grid.Row="1" Background="#F9FAFB" BorderBrush="#EEE" BorderThickness="0,1,0,0" Padding="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Orientation="Horizontal">
                                    <StackPanel Margin="0,0,10,0" Width="200">
                                        <TextBlock Text="Produs" FontSize="12" Foreground="Gray"/>
                                        <TextBox Text="{Binding NewProdus}" Style="{StaticResource ModernTextBox}"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,10,0" Width="80">
                                        <TextBlock Text="UM" FontSize="12" Foreground="Gray"/>
                                        <TextBox Text="{Binding NewUnitate}" Style="{StaticResource ModernTextBox}"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,10,0" Width="100">
                                        <TextBlock Text="Cantitate" FontSize="12" Foreground="Gray"/>
                                        <TextBox Text="{Binding NewCantitate}" Style="{StaticResource ModernTextBox}"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,10,0" Width="100">
                                        <TextBlock Text="PreÈ›" FontSize="12" Foreground="Gray"/>
                                        <TextBox Text="{Binding NewPret}" Style="{StaticResource ModernTextBox}"/>
                                    </StackPanel>
                                    <Button Content="+ Stoc" Click="AddStock_Click" VerticalAlignment="Bottom" Height="36"
                                            Style="{StaticResource ModernButtonStyle}" Background="{StaticResource AccentGreen}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Bottom">
                                    <Button Content="âœï¸" Click="UpdateStock_Click" Margin="0,0,10,0" Height="36" Width="40" ToolTip="Editeaza"
                                            Style="{StaticResource ModernButtonStyle}" Background="{StaticResource AccentOrange}"/>
                                    <Button Content="ðŸ—‘ï¸" Click="DeleteStock_Click" Height="36" Width="40" ToolTip="Sterge"
                                            Style="{StaticResource ModernButtonStyle}" Background="{StaticResource AccentRed}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </TabItem>

                <TabItem Header="Statistici">
                    <Border Background="White" Padding="20">
                        <local:StatisticsView DataContext="{Binding Statistics}"/>
                    </Border>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Page>