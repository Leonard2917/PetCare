<Window x:Class="PetCare.Views.ChatView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="600" Width="400" 
        WindowStartupLocation="CenterScreen"
        Background="#E5DDD5">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style TargetType="ListBox">
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/PetCare;component/Assets/chat_background.jpg" 
                        Stretch="UniformToFill" 
                        Opacity="0.15"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListBox Grid.Row="0" 
                 ItemsSource="{Binding Messages}" 
                 Background="Transparent" 
                 BorderThickness="0" 
                 Margin="10,10,10,0">

            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="IsHitTestVisible" Value="False"/>
                    <Setter Property="Margin" Value="0,2"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,5">
                        <Border Background="{Binding BubbleColor}" 
                                CornerRadius="10" 
                                Padding="12,8" 
                                HorizontalAlignment="{Binding Alignment}" 
                                MaxWidth="280">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="5" ShadowDepth="1" Opacity="0.15" Color="Black"/>
                            </Border.Effect>

                            <StackPanel>
                                <TextBlock Text="{Binding SenderName}" 
                                           FontSize="11" 
                                           FontWeight="SemiBold" 
                                           Foreground="#075E54" 
                                           Margin="0,0,0,3" 
                                           Visibility="{Binding IsMe, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}"/>

                                <TextBlock Text="{Binding Text}" 
                                           TextWrapping="Wrap" 
                                           FontSize="14" 
                                           Foreground="{Binding TextColor}"
                                           LineHeight="20"/>

                                <TextBlock Text="{Binding TimeDisplay}" 
                                           FontSize="10" 
                                           Foreground="#808080" 
                                           HorizontalAlignment="Right" 
                                           Margin="10,2,-5,-2"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Border Grid.Row="1" Background="#F0F0F0" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" 
                        Background="White" 
                        CornerRadius="20" 
                        Margin="0,0,10,0" 
                        Height="45">
                    <TextBox Text="{Binding NewMessageText}" 
                             VerticalContentAlignment="Center" 
                             BorderThickness="0" 
                             Background="Transparent"
                             Padding="15,0" 
                             FontSize="14"
                             VerticalAlignment="Stretch"/>
                </Border>

                <Button Grid.Column="1" 
                        Click="Send_Click" 
                        Width="45" Height="45"
                        Background="#075E54" 
                        BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="22.5"/>
                        </Style>
                    </Button.Resources>

                    <Path Data="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"
                     Fill="White"
                    Stretch="Uniform"
                    Width="18" Height="18"
                    Margin="3,0,0,0"/>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>