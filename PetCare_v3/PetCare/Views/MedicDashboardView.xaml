<Page x:Class="PetCare.Views.MedicDashboardView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PetCare.Views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="Panou Medic">

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid.Resources>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </Grid.Resources>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20,20,20,10">
            <TextBlock Text="{Binding WelcomeMessage}" FontSize="24" FontWeight="Bold" Foreground="#333"/>
            <Button Content="Deconectare" Click="LogoutButton_Click" Margin="20,0,0,0" Padding="10,5" Background="#FFEBEE" Foreground="#D32F2F" BorderThickness="0"/>
        </StackPanel>

        <!-- Main Content Tabs -->
        <TabControl Grid.Row="1" Margin="20,0,20,20" SelectedIndex="{Binding SelectedTabIndex}">
            
            <!-- TAB: PROFIL -->
            <TabItem Header="Profil Profesional">
                <Grid Background="White" Margin="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Left: Details -->
                    <StackPanel Grid.Column="0" Margin="20">
                        <TextBlock Text="Date Profesionale" FontSize="18" FontWeight="SemiBold" Foreground="#1976D2" Margin="0,0,0,15"/>

                        <!-- Clinics Section -->
                        <TextBlock Text="Clinici Asociate:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <ComboBox ItemsSource="{Binding MyClinics}" 
                                      SelectedItem="{Binding SelectedClinic}"
                                      DisplayMemberPath="Nume"
                                      Width="250" 
                                      Margin="0,0,10,0"/>
                            <Button Content="+ Adaugă" Click="AddClinic_Click" Padding="8,4" Background="#4CAF50" Foreground="White" BorderThickness="0"/>
                        </StackPanel>
                        <TextBlock Text="{Binding SelectedClinic.Adresa}" Foreground="#666" FontSize="12" Margin="0,0,0,15"/>

                        <TextBlock Text="Număr Parafă (Obligatoriu)" Margin="0,10,0,2" Foreground="#666"/>
                        <TextBox Text="{Binding NrParafa}" Height="30" Padding="5"/>

                        <TextBlock Text="Biografie / Descriere" Margin="0,15,0,2" Foreground="#666"/>
                        <TextBox Text="{Binding Bio}" Height="100" TextWrapping="Wrap" AcceptsReturn="True" Padding="5" VerticalScrollBarVisibility="Auto"/>

                        <Button Content="Salvează Profil" Click="SaveProfile_Click" Height="40" Margin="0,30,0,0" Background="#4CAF50" Foreground="White" FontWeight="Bold" BorderThickness="0"/>
                    </StackPanel>

                    <!-- Right: Specialties -->
                    <StackPanel Grid.Column="1" Margin="20">
                        <TextBlock Text="Competențe / Specializări" FontSize="18" FontWeight="SemiBold" Foreground="#1976D2" Margin="0,0,0,15"/>
                        <TextBlock Text="Selectează animalele pe care le poți trata:" Margin="0,0,0,10" Foreground="#666"/>

                        <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Padding="10">
                            <ItemsControl ItemsSource="{Binding Specializations}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Denumire}" IsChecked="{Binding IsSelected}" Margin="0,5" FontSize="14"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Border>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- TAB: ORAR -->
            <TabItem Header="Orar Săptămânal">
                <Grid Background="White">
                    <StackPanel Margin="20">
                        <TextBlock Text="Configurează Programul de Lucru" FontSize="18" FontWeight="SemiBold" Foreground="#1976D2" Margin="0,0,0,10"/>
                        
                        <!-- Clinic Selector -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="Clinică:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
                            <ComboBox ItemsSource="{Binding MyClinics}" 
                                      SelectedItem="{Binding SelectedClinic}"
                                      DisplayMemberPath="Nume"
                                      Width="300"/>
                        </StackPanel>
                        
                        <Border BorderBrush="#DDD" BorderThickness="1" Padding="10">
                            <ItemsControl ItemsSource="{Binding WeeklySchedule}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="20"/>
                                                <ColumnDefinition Width="80"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Day Name -->
                                            <TextBlock Grid.Column="0" Text="{Binding ZiNume}" VerticalAlignment="Center" FontWeight="Bold"/>

                                            <!-- Checkbox Working Day -->
                                            <CheckBox Grid.Column="1" Content="Lucrez" IsChecked="{Binding IsWorkingDay}" VerticalAlignment="Center"/>

                                            <!-- Start Time -->
                                            <TextBox Grid.Column="2" Text="{Binding OraInceputStr}" IsEnabled="{Binding IsWorkingDay}" Padding="5" ToolTip="Format HH:mm (Ex: 09:00)"/>

                                            <TextBlock Grid.Column="3" Text="-" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                            <!-- End Time -->
                                            <TextBox Grid.Column="4" Text="{Binding OraSfarsitStr}" IsEnabled="{Binding IsWorkingDay}" Padding="5" ToolTip="Format HH:mm (Ex: 17:00)"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Border>

                        <Button Content="Salvează Orar" Click="SaveSchedule_Click" Height="40" Margin="0,20,0,0" Background="#2196F3" Foreground="White" FontWeight="Bold" BorderThickness="0"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <!-- TAB: PROGRAMĂRI -->
            <TabItem Header="Programări">
                <Grid Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Programările Mele" FontSize="18" FontWeight="SemiBold" Foreground="#1976D2" Margin="20,20,20,10"/>
                    
                    <DataGrid Grid.Row="1" ItemsSource="{Binding MyAppointments}" 
                              AutoGenerateColumns="False" 
                              CanUserAddRows="False" 
                              IsReadOnly="True" 
                              BorderThickness="0" 
                              Background="White" 
                              Margin="20,0,20,20">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Data/Ora" Binding="{Binding DataOraDisplay}" Width="140"/>
                            <DataGridTextColumn Header="Animal" Binding="{Binding AnimalNume}" Width="120"/>
                            <DataGridTextColumn Header="Proprietar" Binding="{Binding MedicNume}" Width="150"/>
                            <DataGridTextColumn Header="Clinică" Binding="{Binding ClinicaNume}" Width="*"/>
                            <DataGridTextColumn Header="Servicii" Binding="{Binding ServiciiDisplay}" Width="200"/>
                            <DataGridTextColumn Header="Durată" Binding="{Binding DurataMinute, StringFormat={}{0} min}" Width="70"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                            <DataGridTemplateColumn Header="Acțiuni" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Finalizează" Click="FinalizeAppointment_Click" 
                                                    IsEnabled="{Binding CanFinalize}"
                                                    Visibility="{Binding CanFinalize, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                    Padding="5,2" Background="#4CAF50" Foreground="White" BorderThickness="0" Margin="0,0,5,0"/>
                                            <Button Content="Vezi Fișa" Click="ViewRecord_Click" 
                                                    IsEnabled="{Binding CanViewRecord}" 
                                                    Visibility="{Binding CanViewRecord, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                    Padding="5,2" Background="#2196F3" Foreground="White" BorderThickness="0"/>
                                            <Button Content="Chat" Click="OpenChat_Click" Padding="5,2" Background="{Binding ChatButtonStyle}" Foreground="White" BorderThickness="0" Margin="5,0,0,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- TAB: STATISTICI -->
            <TabItem Header="Statistici">
                <local:StatisticsView DataContext="{Binding Statistics}"/>
            </TabItem>

        </TabControl>
    </Grid>
</Page>
